{
  "description": "AIDAM Memory - Cognitive memory hooks for background Retriever and Learner",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/on_session_start.sh\"",
            "timeout": 15,
            "statusMessage": "Starting AIDAM memory system..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"C:/Users/user/AppData/Local/Programs/Python/Python312/python.exe\" \"${CLAUDE_PLUGIN_ROOT}/scripts/on_prompt_submit.py\"'",
            "timeout": 8,
            "statusMessage": "Retrieving memory context..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '\"C:/Users/user/AppData/Local/Programs/Python/Python312/python.exe\" \"${CLAUDE_PLUGIN_ROOT}/scripts/on_tool_use.py\"'",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/on_session_end.sh\"",
            "timeout": 10,
            "statusMessage": "Stopping AIDAM memory system..."
          }
        ]
      }
    ]
  }
}
