{
  "description": "AIDAM Memory - Cognitive memory with background orchestrator. Custom /commands via UserPromptSubmit router.",
  "hooks": {
    "PreCompact": [
      {
        "matcher": "manual|auto",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/on_pre_compact.sh\"",
            "timeout": 10,
            "statusMessage": "Preparing AIDAM for compaction..."
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|clear|compact|resume",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/on_session_start.sh\"",
            "timeout": 15,
            "statusMessage": "Starting AIDAM memory system..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/on_session_end.sh\"",
            "timeout": 10,
            "statusMessage": "Stopping AIDAM memory system..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"C:/Users/user/AppData/Local/Programs/Python/Python312/python.exe\" \"${CLAUDE_PLUGIN_ROOT}/scripts/command_router.py\"",
            "timeout": 35
          }
        ]
      }
    ]
  }
}
